<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/loading_icon"
        android:layout_width="match_parent"
        android:layout_height="64dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">
        <TextView
            android:text="요일 선택"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/day_group"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/monday"
                android:text="월"
                android:layout_width="50dp"
                android:layout_height="20dp" />
            <RadioButton
                android:id="@+id/tuesday"
                android:text="화"
                android:layout_width="50dp"
                android:layout_height="20dp" />
            <RadioButton
                android:id="@+id/wendsday"
                android:text="수"
                android:layout_width="50dp"
                android:layout_height="20dp" />
            <RadioButton
                android:id="@+id/thursday"
                android:text="목"
                android:layout_width="50dp"
                android:layout_height="20dp" />
            <RadioButton
                android:id="@+id/friday"
                android:text="금"
                android:layout_width="50dp"
                android:layout_height="20dp" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">
        <TextView
            android:text="시간선택"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/time_9"
            android:text="9"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_10"
            android:text="10"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_11"
            android:text="11"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_12"
            android:text="12"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_13"
            android:text="13"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_14"
            android:text="14"
            android:layout_width="50dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/time_15"
            android:text="15"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_16"
            android:text="16"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_17"
            android:text="17"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_18"
            android:text="18"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_19"
            android:text="19"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <CheckBox
            android:id="@+id/time_20"
            android:text="20"
            android:layout_width="50dp"
            android:layout_height="20dp" />

    </LinearLayout>

</LinearLayout>